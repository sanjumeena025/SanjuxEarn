    <script>
        let points = 0;

        // Load points from localStorage
        if(localStorage.getItem('userPoints')) {
            points = parseInt(localStorage.getItem('userPoints'));
            updateDisplay();
        }

        function earnPoints(amount) {
            points += amount;
            updateDisplay();
            localStorage.setItem('userPoints', points);
            alert(`ğŸ‰ +${amount} Points! Total: ${points}`);
        }

        function redeemPoints() {
            if(points >= 100) {
                points -= 100;
                updateDisplay();
                localStorage.setItem('userPoints', points);
                alert('âœ… â‚¹1 redeemed successfully!');
            } else {
                alert('âŒ You need at least 100 points to redeem!');
            }
        }

        function resetPoints() {
            points = 0;
            updateDisplay();
            localStorage.setItem('userPoints', points);
            alert('Points reset to 0');
        }

        function updateDisplay() {
            document.getElementById('points').textContent = points + ' Points';
        }
    </script>
</body>
